                <Label Content="宫" Canvas.Left="160" Canvas.Top="72" Background="Red" Padding="2" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center" Width="24" Height="24" HorizontalContentAlignment="Center" FontSize="16" />
                <Label Content="宫" Canvas.Left="194" Canvas.Top="72" Background="Red" Padding="2" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center" Width="24" Height="24" HorizontalContentAlignment="Center" FontSize="16" />
                <Label Content="宫" Canvas.Left="223" Canvas.Top="72" Background="Red" Padding="2" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center" Width="24" Height="24" HorizontalContentAlignment="Center" FontSize="16" />
                <Label Content="宫" Canvas.Left="252" Canvas.Top="72" Background="Red" Padding="2" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center" Width="24" Height="24" HorizontalContentAlignment="Center" FontSize="16" />
                <Label Content="宫" Canvas.Left="286" Canvas.Top="72" Background="Red" Padding="2" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center" Width="24" Height="24" HorizontalContentAlignment="Center" FontSize="16" />
                <Label Content="宫" Canvas.Left="315" Canvas.Top="72" Background="Red" Padding="2" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center" Width="24" Height="24" HorizontalContentAlignment="Center" FontSize="16" />
                <Label Content="宫" Canvas.Left="344" Canvas.Top="72" Background="Red" Padding="2" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center" Width="24" Height="24" HorizontalContentAlignment="Center" FontSize="16" />
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
