                <CheckBox x:Name="Autoplay" Content="自动弹琴" Canvas.Left="223" Canvas.Top="10" />
                <ComboBox Height="20" Canvas.Left="296" Width="72" SelectedIndex="0" Canvas.Top="7">
                    <ComboBoxItem Content="一号琴"></ComboBoxItem>
                    <ComboBoxItem Content="二号琴"></ComboBoxItem>
                    <ComboBoxItem Content="三号琴"></ComboBoxItem>
                    <ComboBoxItem Content="四号琴"></ComboBoxItem>
                </ComboBox>
            </Canvas>
        </Viewbox>
    </Grid>
